{
  "name": "shionlib-og",
  "version": "0.1.0",
  "description": "OG image microservice for shionlib",
  "author": "Hoshimi Shion",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "sh -c 'bun --hot src/server.ts & pid=$!; trap \"kill $pid 2>/dev/null; exit 0\" INT TERM; wait $pid; code=$?; [ $code -eq 130 ] && exit 0; exit $code'",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\" \"*.{json,cjs,mjs}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\" \"*.{json,cjs,mjs}\"",
    "lint": "eslint \"{src,tests}/**/*.{ts,tsx}\" --fix",
    "lint:check": "eslint \"{src,tests}/**/*.{ts,tsx}\" --max-warnings=0",
    "start": "bun src/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@takumi-rs/core": "^0.68.12",
    "@takumi-rs/helpers": "^0.68.12",
    "@takumi-rs/image-response": "^0.68.12",
    "hono": "^4.12.0",
    "ioredis": "^5.9.3",
    "react": "^19.0.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/react": "^19.0.0",
    "bun-types": "^1.3.9",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.5.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.56.0"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
